{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "installCommand": "cd frontend && pnpm install",
  "buildCommand": "cd frontend && pnpm run build && mkdir -p ../public && cp -r dist/* ../public/"
}
